<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/greensheep"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/greensheep"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="68dp"
        android:layout_marginStart="68dp" />

    <TextView
        android:id="@+id/textViewGreenSheep"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Where Is the Green Sheep? / Donde esta la oveja verde? (Inglés) Pasta de cartón"
        android:layout_alignTop="@+id/greensheep"
        android:layout_toRightOf="@+id/greensheep"
        android:layout_toEndOf="@+id/greensheep"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <TextView
        android:id="@+id/priceGreenSheep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#0000ff"
        android:text="$365.86"
        android:layout_below="@+id/textViewGreenSheep"
        android:layout_alignLeft="@+id/textViewGreenSheep"
        android:layout_alignStart="@+id/textViewGreenSheep" />

</RelativeLayout>
